{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ssmt4",
  "version": "0.1.0",
  "identifier": "ssmt4",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
        {
          "label": "main"
        }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/icon.ico",   
      "icons/icon.icns",  
      "icons/128x128.png" 
    ]
  }
}
